@{
}

@model MvcMovie.Models.Movie

<h2>Eliminar</h2>

<div>
    <h4>Estás seguro que deseas eliminar este registro?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Título:
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <!-- Agrega aquí más propiedades del modelo que deseas mostrar -->
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Cancelar</a>
    </form>
</div>